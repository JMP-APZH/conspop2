{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "bcryptjs", "jsonwebtoken"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}