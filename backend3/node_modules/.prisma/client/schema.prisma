generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum CityAgglomeration {
  CENTRE
  NORD
  SUD
}

model MartiniqueCity {
  id              String            @id @default(uuid())
  name            String            @unique
  postalCode      String
  agglomeration   CityAgglomeration
  population      Int
  usersFromOrigin User[]            @relation("UserOriginCity")
  usersCurrent    User[]            @relation("UserCurrentCity")
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@map("martinique_cities")
}

model User {
  id             String         @id @default(uuid())
  email          String         @unique
  password       String
  firstName      String
  lastName       String
  nickname       String?
  isDiaspora     Boolean        @default(false)
  cityOfOriginId String
  cityOfOrigin   MartiniqueCity @relation("UserOriginCity", fields: [cityOfOriginId], references: [id], onDelete: NoAction)
  currentCityId  String
  currentCity    MartiniqueCity @relation("UserCurrentCity", fields: [currentCityId], references: [id], onDelete: NoAction)
  role           Role           @default(USER)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  lastLoginAt    DateTime?      @map("last_login_at")

  @@map("users")
}
